<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <title>Список админов</title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        padding: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      }
      th,
      td {
        padding: 12px;
        border: 1px solid #ccc;
        color: #333;
      }
      th {
        background: #333;
        color: white;
      }
    </style>
  </head>
  <body style="background-color: <%= MainPageContent.bgcolor %>;">
    <h1>Список админов</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Имя пользователя</th>
          <th>Пароль</th>
          <th>Права админа</th>
        </tr>
      </thead>
      <% admins.forEach(admin => { %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.username %></td>
        <td><%= admin.password %></td>
        <td>
          <% if(admin.role == 1) { %>
          <p>Moderator</p>
          <% }else if(admin.role == 2) { %>
          <p>Admin</p>
          <% }else if(admin.role == 3) { %>
          <p>Main Admin</p>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
